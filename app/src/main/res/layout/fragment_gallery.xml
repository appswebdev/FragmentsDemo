<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="college.edu.tomer.fragmentsdemo.GalleryFragment">


    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btnLeft"
        android:background="@drawable/ic_left_24dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
       />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ivGallery"
        android:src="@drawable/penguins"
        android:layout_toLeftOf="@+id/btnRight"
        android:layout_toRightOf="@+id/btnLeft"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnRight"
        android:background="@drawable/ic_right_24dp"
        android:layout_alignTop="@+id/btnLeft"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
